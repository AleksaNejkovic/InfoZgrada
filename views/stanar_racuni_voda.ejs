<div class="container">
    <div class="row justify-content-center my-5">
        <h3>Vas racun za vodu</h3>
    </div>
    <div class="row justify-content-center my-5">
        <table class="table table-dark  table-responsive-sm">
            <thead>
            <tr>
                <th scope="col">Ukupna vrednost u m3</th>
                <th scope="col">Ukupna vrednost u dinarima</th>
                <th scope="col">Vasa potrosnja u m3</th>
                <th scope="col">Vas racun u dinarima</th>
                <th scope="col">Racun za datum</th>
            </tr>
            </thead>
            <% data.forEach(function (i) { %>
            <tbody>
            <tr>
                <td><%=i.u_vrednost_m3%></td>
                <td><%=i.u_vrednost_din%></td>
                <td><%=i.p_vrednost_m3%></td>
                <td><%=i.p_vrednost_din%></td>
                <td><%=i.datum%></td>
            </tr>
            </tbody>

            <%})%>
        </table>
    </div>
    <div class="row justify-content-center">
        <a href="/stanar_racuni/4"><input type="button" value="Povratak na racune" class="dugme" style="width: 350px"></a>
    </div>

</div>


